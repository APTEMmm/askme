<div class="container">
  <h2 class="title-lg mb">Все вопросы</h2>

  <% @questions.each do |question| %>
    <%= content_tag :p, class: 'mb-sm' do %>
      <%= link_to "Вопрос: #{question.id}", question_path(question), class: "#{'transparent-title' if question.hidden?}" %>
    <% end %>
  <% end %>
  <p class="mt">
    <%= link_to 'Создать новый вопрос', new_question_path, class: 'button button-main' %>
  </p>
</div>
